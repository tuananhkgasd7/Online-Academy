{{#with authUser}}
{{#if IsTeacher}}
<div class="row mt-3">
    <div class="col-3">
        <div class="card-header bg-info text-white">
            <h5 class="font-weight-bold">PROFILE</h5>
            <p>Tên người dùng</p>
        </div>
        <div class="card-body">
            <div class="dropdown-divider"></div>
            <a href="/user/profile" role="button" class="nav-link pt-2 pb-2 text-white bg-info">Giới thiệu</a>
            <a href="/user/profile/view_course" role="button" class="nav-link pt-2 pb-2 text-dark">Danh sách khóa học đã đăng</a>
            <div class="dropdown-divider"></div>
            <a href="/user/profile/add_course" role="button" class="nav-link pt-2 pb-2 text-dark">Đăng khóa học</a>
        </div>
    </div>
    <div class="col-9 mt-4 mb-5 ml-2 row bg-white pt-3 pb-3">
        <form class="w-50">
            <div class="form-group mt-2">
            <label for="exampleFormControlFile1" class="font-weight-bold">Ảnh đại diện</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <div class="form-group mt-2">
                <label for="courseName" class="font-weight-bold">Tên khóa học</label>
                <input type="email" class="form-control" id="courseName" name="courseName" placeholder="Tên khóa học">
            </div>
            <div class="form-group mt-2">
            <label for="shortDescription" class="font-weight-bold">Mô tả ngắn gọn nội dung khóa học</label>
            <textarea class="form-control" id="shortDescription" name="shortDescription" rows="3"></textarea>
            </div>
            <div class="form-group mt-2">
            <label for="longDescription" class="font-weight-bold">Mô tả chi tiết nội dung khóa học</label>
            <textarea class="form-control" id="longDescription" name="longDescription" rows="3"></textarea>
            </div>
            <div class="form-group mt-2">
            <label for="coursePrice" class="font-weight-bold">Học phí</label>
            <input type="text" class="form-control" id="coursePrice" name="coursePrice" placeholder="đơn vị đồng">
            </div>
            <div class="form-group mt-2">
            <label for="courseOutline" class="font-weight-bold">Đề cương khóa học</label>
            <input type="file" class="form-control-file" id="courseOutline" name="courseOutline">
            </div>
            <button type="submit" class="btn btn-outline-primary">Xác nhận</button>
        </form>
    </div>
</div>
{{/if}}
{{/with}}