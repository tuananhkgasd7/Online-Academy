{{#with authUser}}
<div class="row mt-3">
<div class="col-3">
    <div class="card-header bg-info text-white">
        <h5 class="font-weight-bold">PROFILE</h5>
        <p>{{fullName}}</p>
    </div>
    <div class="card-body">
        <a href="Profile-ChangePass.html" role="button" class="nav-link pt-2 pb-2 text-dark">Thay đổi mật khẩu</a>
        <div class="dropdown-divider"></div>
        <a href="Profile-UpdateInfor.html" role="button" class="nav-link pt-2 pb-2 text-dark">Cập nhật thông tin cá nhân</a>
        <div class="dropdown-divider"></div>
        <a href="Profile-ListFavoriteCourses.html" role="button" class="nav-link pt-2 pb-2 text-dark">Danh sách khóa học yêu thích</a>
        <div class="dropdown-divider"></div>
        <a href="Profile-ListCourseBuy.html" role="button" class="nav-link pt-2 pb-2 text-dark">Danh sách khóa học đã đăng ký</a>
    </div>
</div>
<div class="col-9 pt-5 mb-5">
    <form>
        <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control w-50" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@gmail.com">
        </div>
        <div class="form-group">
        <label for="exampleInputPassword1">Mật khẩu</label>
        <input type="password" class="form-control w-50" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    </form>
</div>
</div>
{{/with}}