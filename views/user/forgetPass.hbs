<form method="POST" action="">
	<div class="container-fluid login">
		<div class="row pt-5 pb-5">
			<div class="col-4"></div>
			<div class="col-4 bg-light-blur pt-5 pb-4 mt-5 mb-5">
				<form class="form">
					<label for="pwd" class="mt-3 w3-black w3-opacity">Mật khẩu</label>
  					<input type="password" class="form-control" placeholder="Nhập mật khẩu" id="pwd" name="pwd">
					<label for="cpwd" class="mt-3 w3-black w3-opacity">Xác nhận mật khẩu</label>
  					<input type="password" class="form-control" placeholder="Nhập mật khẩu" id="cpwd" name="cpwd">					
				</form>
				<div class="mt-4 button mb-5 pb-5">
					<a class="float-left btn btn-outline-success" role="button" href="/">Hủy bỏ</a>
					<button class="float-right btn btn-primary" type="submit">Xác nhận</a>
				</div>
			</div>
			<div class="col-4"></div>
		</div>
	</div>
</form>
<script>
    $("form").submit(function(event){
        event.preventDefault();
        const pass = $('#pwd').val();
        const confirm = $('#cpwd').val();
        
        if(pass.length === 0 || confirm.length === 0)
        {
            alert('Chưa điền đầy đủ thông tin');
            return;
        }
        if(pass!=confirm)
        {
            alert('Xác nhận mật khẩu không chính xác');
            return;
        }
        else
        {
            alert('Lấy lại mật khẩu thành công');
                $("form").off('submit').submit();
        }
        
        
    });

</script>